<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">信用代码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入公司的信用代码" />
      </view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">工作单位</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入营业执照上的公司名称" />
      </view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">所属行业</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请选择所属行业" />
      </view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">运输主管部门</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入运输主管部门" />
      </view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">所在县市区</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="picker">
            {{region[0]}}－{{region[1]}}－{{region[2]}}
          </view>
        </picker>
      </view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">法定代表人</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入法定代表人" />
      </view>
    </view>
  </view>

  <view class="page__bd page__bd_spacing"></view>
  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="primary" catchtap='testTap'>保　　　　存</button>
  </view>
</view>